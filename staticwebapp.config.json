{
  "globalHeaders": {
    "content-security-policy": "default-src 'self'; base-uri 'self'; frame-ancestors 'self'; object-src 'none'; connect-src 'self'; img-src 'self' data:; script-src 'self'; style-src 'self'; frame-src https://outlook.office.com; child-src https://outlook.office.com;",
    "x-content-type-options": "nosniff",
    "referrer-policy": "strict-origin-when-cross-origin",
    "permissions-policy": "camera=(), microphone=(), geolocation=()",
    "strict-transport-security": "max-age=31536000; includeSubDomains; preload"
  },

  "routes": [
    {
      "route": "/assets/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/**/*.html",
      "headers": {
        "cache-control": "no-cache"
      }
    },

    /* --- Clean URLs（/about → /about.html 等）--- */
    { "route": "/about",    "rewrite": "/about.html" },
    { "route": "/access",   "rewrite": "/access.html" },
    { "route": "/booking",  "rewrite": "/booking.html" },
    { "route": "/partners", "rewrite": "/partners.html" },

    /* /blog はディレクトリ運用。/blog → /blog/ に正規化（301） */
    { "route": "/blog", "redirect": "/blog/", "statusCode": 301 }
  ],

  "mimeTypes": {
    ".webp": "image/webp",
    ".svg":  "image/svg+xml"
  },

  "responseOverrides": {
    "404": { "rewrite": "/index.html", "statusCode": 404 }
  }
}
